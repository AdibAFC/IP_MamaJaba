    <script>
    let eyeicon = document.getElementById("eyeicon");
    let password = document.getElementById("password");

    eyeicon.onclick = function() {
      if (password.type == "password"){
        password.type = "text"; 
        eyeicon.src = "eye-open.png";
      }else{
        password.type = "password";
        eyeicon.src = "eye-close.png";
      }
    } 
  </script>

    <script>

  
toggle.onclick = function(active){
  toggle.classList.toggle('active');
  navbar.classList.toggle('active');
  container.classList.toggle('active');
}
document.onclick = function(e){
    if(e.target.id !== 'navbar'&& e.target.id !== 'toggle' && e.target.id != 'home'){
        toggle.classList.remove('active');
        navbar.classList.remove('active');
        container.classList.remove('active');

    }
}
if (links.length) {
  links.forEach((link) => {
    link.addEventListener('click', (e) => {
      links.forEach((link) => {
          link.classList.remove('active');
      });
      link.classList.add('active');
    });
  });
}
    </script>


<script>
document.querySelectorAll('.password-toggle').forEach(function(icon) {
    icon.addEventListener('click', function() {
        var targetId = this.getAttribute('data-target');
        var passwordField = document.getElementById(targetId);

        if (passwordField.type === "password") {
            passwordField.type = "text";
            this.src = "eye-open.png";
        } else {
            passwordField.type = "password";
            this.src = "eye-close.png";
        }
    });
});

</script>
